<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    tools:context=".ProfileSettings.NotificationsSettings">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/ButtonTranspernt"
        android:drawableStart="@drawable/baseline_arrow_left_24"
        android:text="Notifications Settings"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="General Notification"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle general notifications"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/notificationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notificationText" />

    <TextView
        android:id="@+id/soundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="Sound"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationText" />

    <Switch
        android:id="@+id/soundSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle sound"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/soundText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/soundText" />

    <TextView
        android:id="@+id/doNotDisturbModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="Do Not Disturb Mode"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundText" />

    <Switch
        android:id="@+id/doNotDisturbModeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle Do Not Disturb Mode"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/doNotDisturbModeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/doNotDisturbModeText" />

    <TextView
        android:id="@+id/vibrateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="Vibrate"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doNotDisturbModeText" />

    <Switch
        android:id="@+id/vibrateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle vibration"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/vibrateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vibrateText" />

    <TextView
        android:id="@+id/lockScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="Lock Screen"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vibrateText" />

    <Switch
        android:id="@+id/lockScreenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle lock screen notifications"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/lockScreenText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lockScreenText" />

    <TextView
        android:id="@+id/remindersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:text="Reminders"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lockScreenText" />

    <Switch
        android:id="@+id/remindersSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle reminders"
        android:thumb="@drawable/thumb_switch"
        android:track="@drawable/track_switch"
        app:layout_constraintBottom_toBottomOf="@+id/remindersText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/remindersText" />

</androidx.constraintlayout.widget.ConstraintLayout>
