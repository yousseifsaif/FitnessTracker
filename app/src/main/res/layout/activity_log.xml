<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#232323" tools:context=".Login_SignUp.LogIn">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Log In"
            android:textColor="#E2F163"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:text="Fit Body is a health and fitness app that helps users reach weight loss and other health goals. They provide food-tracking tools and curated meal and exercise plans that can be customized to fit your lifestyle. The central focus of Fit Body program is the logging "
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="#CC2C2C2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username or Email"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@id/view1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        android:hint="example@example.com"
        android:textColorHint="#BE000000"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:background="@drawable/edit_text"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <EditText
        android:background="@drawable/edit_text"
        android:password="true"
        android:textColor="@color/black"
        android:id="@+id/editText2"
        android:layout_width="311dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        android:hint="*************"
        android:textColorHint="#BE000000"
        app:layout_constraintTop_toBottomOf="@id/text2"
        tools:ignore="Deprecated" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/editText2"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/editText2"
        />
    <Button
        android:id="@+id/login_button"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Log In"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/view1"
        android:layout_margin="18dp"
        android:background="@drawable/button"

        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        android:text="or sign up with"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/view1"
        android:padding="16dp"

        />


    <ImageView
        android:id="@+id/img_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:src="@drawable/google_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3" />

    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"

        android:paddingHorizontal="8dp"
        android:src="@drawable/facebook_icon"
        app:layout_constraintStart_toEndOf="@+id/img_google"
        app:layout_constraintTop_toBottomOf="@+id/text3" />

    <ImageView
        android:id="@+id/img_fingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:src="@drawable/fingerprint_icon"
        app:layout_constraintStart_toEndOf="@+id/img_facebook"
        app:layout_constraintTop_toBottomOf="@id/text3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t have an account? Sign Up"
        app:layout_constraintTop_toBottomOf="@id/img_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="26dp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>