<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- اللون الأساسي للخلفية -->
    <solid android:color="#222222"/> <!-- لون داكن ليتناسب مع الوضع الليلي -->

    <!-- الزوايا المستديرة -->
    <corners android:radius="12dp"/>

    <!-- الإطار الخارجي -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50"/> <!-- لون أخضر فاتح لإعطاء مظهر عصري -->

    <!-- التباعد الداخلي -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp"/>

</shape>
